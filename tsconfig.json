{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "target": "ES2020"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "hooks/usePersistLogin.js",
    "hooks/useAuth.js",
    "hooks/useAuth.js",
    "components/pages/LoginPage.js",
    "components/pages/LoginPage.js",
    "components/pages/LoginPage.js",
    "components/Navbar.js",
    "components/pages/daily/NotesViewer.js"
  ],
  "exclude": ["node_modules"]
}
